<div class="row">
    <h1>Enter Event Details...</h1>
    <form action="/Home/AddEvent" method="post" style="margin-top: 60px">
        <div class="col-md-6 well">
            <input type="date" name="Date" class="form-control" />
            <br />
            <select name="MaxPeople" class="form-control">
                @for (int i = 1; i <= 25; i++)
                {
                    <option>@i</option>
                }
            </select>
            <br />
            <button class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
